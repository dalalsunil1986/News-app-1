<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.george.newsapp.AddArticle">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Article title"
        android:inputType="text|textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <EditText
        android:id="@+id/editBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Article body"
        android:inputType="textLongMessage"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <EditText
        android:id="@+id/editAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Article author"
        android:inputType="text|textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Time"
        android:inputType="time" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <EditText
        android:id="@+id/editRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Region"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="#FFFFFF"
            android:onClick="dispatchTakePictureIntent"
            android:src="@android:drawable/ic_menu_camera" />

        <Space
            android:layout_width="50sp"
            android:layout_height="20sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:text="Take a picture"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />


    <Button
        android:id="@+id/addArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addArticle"
        android:text="Add Article" />
</LinearLayout>
